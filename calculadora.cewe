funciwi suma(a, b) {
    resultado = a + b;
    printiwi("Resultado de la suma:");
    printiwi(resultado);
    returnuwu 0;
}

funciwi resta(a, b) {
    resultado = a - b;
    printiwi("Resultado de la resta:");
    printiwi(resultado);
    returnuwu 0;
}

funciwi multiplicacion(a, b) {
    resultado = a * b;
    printiwi("Resultado de la multiplicación:");
    printiwi(resultado);
    returnuwu 0;
}

funciwi division(a, b) {
    ifiwi (b == 0) {
        printiwi("Error: división por cero.");
    } else {
        resultado = a / b;
        printiwi("Resultado de la división:");
        printiwi(resultado);
    }
    returnuwu 0;
}

funciwi potencia(base, exponente) {
    resultado = 1;
    whilewe (exponente > 0) {
        resultado = resultado * base;
        exponente = exponente - 1;
    }
    printiwi("Resultado de la potencia:");
    printiwi(resultado);
    returnuwu 0;
}

mainiwi() {
