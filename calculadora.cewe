        printiwi("6. Salir");
        printiwi("Seleccione una opción:");
        opcion = inputuwu();

        ifiwi (opcion >= 1 && opcion <= 5) {
            printiwi("Ingrese el primer número:");
            a = inputuwu();
            printiwi("Ingrese el segundo número:");
            b = inputuwu();

            ifiwi (opcion == 1) {
